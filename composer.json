{
    "name": "payx/commission-task-skeleton",
    "description": "Skeleton for PayX recruitment task",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "PayX\\CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PayX\\CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "8.1",
        "nesbot/carbon": "^2.59"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
